# APIX AI - Enterprise Environment Configuration

# =============================================================================
# HEDERA BLOCKCHAIN CONFIGURATION
# =============================================================================
HEDERA_ACCOUNT_ID=0.0.xxxxx
HEDERA_PRIVATE_KEY=302e020100300506032b657004220420...
HEDERA_NETWORK=testnet
HEDERA_MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com

# =============================================================================
# AI & MACHINE LEARNING CONFIGURATION
# =============================================================================
# Primary LLM for code composition and enterprise analysis
OPENAI_API_KEY=sk-proj-...

# Secondary LLM for code analysis and validation
ANTHROPIC_API_KEY=sk-ant-...

# Fast LLM for real-time responses and classification
GROQ_API_KEY=gsk_...

# Default LLM provider (openai, anthropic, groq)
DEFAULT_LLM=openai

# AI model configurations
PRIMARY_MODEL=gpt-4o-mini
SECONDARY_MODEL=claude-3-5-sonnet-20241022
FAST_MODEL=llama-3.1-8b-instant

# AI behavior settings
AI_COMPOSITION_ENABLED=true
AI_MAX_RETRIES=3
AI_TIMEOUT_MS=30000
AI_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# ENTERPRISE SECURITY CONFIGURATION
# =============================================================================
# Data encryption
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-jwt-secret-key-here

# Security monitoring
ENABLE_SECURITY_LOGGING=true
SECURITY_LOG_LEVEL=info
AUDIT_LOG_ENDPOINT=https://your-audit-system.com/logs

# =============================================================================
# PERFORMANCE & CACHING CONFIGURATION
# =============================================================================
# Caching
ENABLE_CACHING=true
CACHE_TTL_HOURS=24
REDIS_URL=redis://localhost:6379

# Rate limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=60

# =============================================================================
# TEMPLATE & VALIDATION CONFIGURATION
# =============================================================================
# Template system
TEMPLATE_VALIDATION_MODE=live
FALLBACK_TO_BASE_TEMPLATES=true
ENABLE_CUSTOM_TEMPLATES=true

# Validation settings
ENABLE_AGENT_KIT_VALIDATION=true
HEDERA_VALIDATION_NETWORK=testnet
VALIDATION_TIMEOUT_SECONDS=60

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Logging
LOG_LEVEL=info
ENABLE_DEBUG_LOGGING=false

# CLI behavior
CLI_INTERACTIVE_MODE=true
CLI_PROGRESS_INDICATORS=true
CLI_COLOR_OUTPUT=true

# Development settings
NODE_ENV=development
ENABLE_TELEMETRY=false